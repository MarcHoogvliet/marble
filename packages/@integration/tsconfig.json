{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "pretty": true,
    "strict": true,
    "target": "es6",
    "outDir": "./dist/",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "../node_modules/@types"],
    "lib": ["es2018"]
  },
  "inputs": ["src"],
  "include": ["node_modules/@types", "src/**/*.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../messaging" },
    { "path": "../websockets" },
    { "path": "../middleware-body" },
    { "path": "../middleware-cors" },
    { "path": "../middleware-io" },
    { "path": "../middleware-jwt" },

    { "path": "../middleware-logger" },
    { "path": "../middleware-multipart" }
  ]
}
